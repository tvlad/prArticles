<!DOCTYPE html>
<html>
<head>
  <title>PrArticles</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
    <span>Hi, </span>
    <div><%= image_tag current_user.avatar.url.to_s, width: '30', height: '30' if current_user.avatar %>
      <%= current_user.email %> </div>
    <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Log In', new_user_session_path %> или <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
